# Anthropic API Key (required for Claude model)
ANTHROPIC_API_KEY=your_claude_api_key_here

# LangGraph Cloud API Configuration (optional - for persistent task tracking)
# If not provided, the system will run in local mode with mock persistence
LANGGRAPH_API_URL=https://api.langsmith.com
LANGGRAPH_API_KEY=your_langgraph_api_key_here

# Alternative: LangSmith API Key (can be used instead of LANGGRAPH_API_KEY)
LANGSMITH_API_KEY=your_langsmith_api_key_here

# System Configuration
ENABLE_HITL=true
ENABLE_SDK_PERSISTENCE=false